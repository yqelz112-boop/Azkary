      "number": 1,
      "name": { "short": "الفاتحة" },
      "verses": [
        { "text": { "arab": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ" } },
        { "text": { "arab": "الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ" } },
        { "text": { "arab": "الرَّحْمَٰنِ الرَّحِيمِ" } },
        { "text": { "arab": "مَالِكِ يَوْمِ الدِّينِ" } },
        { "text": { "arab": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ" } },
        { "text": { "arab": "اهْدِنَا الصِّرَاطَ الْمُسْتَقِيمَ" } },
        { "text": { "arab": "صِرَاطَ الَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ الْمَغْضُوبِ عَلَيْهِمْ وَلَا الضَّالِّينَ" } }
      ]
    },
    {
      "number": 2,
      "name": { "short": "البقرة" },
      "verses": [
        { "text": { "arab": "الم" } },
        { "text": { "arab": "ذَٰلِكَ الْكِتَابُ لَا رَيْبَ ۛ فِيهِ ۛ هُدًى لِلْمُتَّقِينَ" } }
      ]
    },
    {
      "number": 3,
      "name": { "short": "آل عمران" },
      "verses": [
        { "text": { "arab": "الم" } },
        { "text": { "arab": "اللَّهُ لَا إِلَٰهَ إِلَّا هُوَ الْحَيُّ الْقَيُّومُ" } }
      ]
    }
  ]
